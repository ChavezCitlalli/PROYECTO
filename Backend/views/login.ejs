<!-- formulario de bootstrap -->

    <h3 class="p-3 text-center">B I E N V E N I D O</h3>

    <div class="container mb-4">
      <div class="card border-black">
        <div class="text-center  card-header"><h2>Inicio de sesión</h2></div>
        <div class="card-body">
          
          <!-- referencia a ruta guardar creacion de usuario se hace un POST-->
          
          <form id="loginForm" method="POST">
            <div class="mb-3">
              <label for="usuario_email" class="form-label-">Email/correo electronico</label>
              <input required type="email" class="form-control" id="usuario_email" name="usuario_email" tabindex="1"/>
            </div>

            <div class="mb-3">
                <label for="usuario_pass" class="form-label">Contraseña</label>
                <input required type="password" class="form-control" id="usuario_pass" name="usuario_pass" tabindex="2"/>
            </div>

            <button type="submit" class="btn btn-dark" tabindex="3"> 
              Iniciar  Sesión
              

            </button>
            <a href="/newUsuarioPublico" class="btn btn-secondary col-md-3">Registrarse</a>
          </form>

        </div>
      </div>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
